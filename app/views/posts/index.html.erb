<p id="notice"><%= notice %></p>

<h1>Welcome <%= current_user.username %>!</h1>

<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-body"><table class = "table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Blog entry</th>
          <th> Time of Entry</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    </div>
  </div>
</div>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>by <%= post.user.username %></td>
        <td><%= post.blog_entry %></td>
        <td><%= post.created_at.in_time_zone("America/Chicago") %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="panel panel-default">

  <div class="panel-footer"><%= link_to 'New Post', new_post_path %></div>
</div>

<style>
  .panel-footer{
    text-align: center;
  }
  </style>
