<!DOCTYPE html>
<html>
  <head>
    <title>AzzamBlog1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

        </div>
      </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', posts_path %></li>
            <li><%= link_to 'New Post', new_post_path %></li>
          </ul>
          <form class="navbar-form navbar-left">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Blog Name">
            </div>
            <button type="submit" class="btn btn-default">Search</button>
          </form>
          <div class="pull-right">
            <% if user_signed_in? %>
            Welcome
              <%= gravatar_tag current_user.email, size: 20 %>
              <%= image_tag current_user.avatar.url, size: 50 %>
              <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
            <% end %>
          </div>
          </div>
        </div>
</nav>
    <div class = container>

    <%= yield %>
      </div>

  </body>
</html>
